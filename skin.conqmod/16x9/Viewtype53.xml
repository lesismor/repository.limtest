<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype53">

		<control type="group">
			<visible>Control.IsVisible(53)</visible>

			<!-- Curve -->
			<include content="Curve-Horizontal">
				<param name="height">844</param>
			</include>

			<!-- Thumbs -->
			<control type="panel" id="53">
				<!-- <left>150</left> -->
				<left>900</left>
				<top>20</top>
				<width>1020</width>
				<height>910</height>
				<onleft>63</onleft>
				<onright condition="!Skin.HasSetting(KioskMode)">3001</onright>
				<onup>53</onup>
				<ondown>53</ondown>
				<pagecontrol>63</pagecontrol>
				<preloaditems>9</preloaditems>
				<viewtype label="$LOCALIZE[31078]">icon</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)</visible>

				<itemlayout width="245" height="305">
				<!-- <itemlayout width="270" height="333"> -->
					<!-- Image - Movies -->
					<include content="image-53">
						<param name="fallback">DefaultMovie.png</param>
						<param name="colordiffuse">DiffusePosterNF</param>
						<param name="visible">Container.Content(movies)</param>
					</include>
					<!-- Image - TV -->
					<include content="image-53">
						<param name="fallback">DefaultTVShows.png</param>
						<param name="colordiffuse">DiffusePosterNF</param>
						<param name="visible">!Container.Content(movies)</param>
					</include>
					<!-- Watched status -->
					<control type="image">
						<left>170</left>
						<top>286</top>
						<width>30</width>
						<height>42</height>
						<texture>$VAR[StatusOverlayWide]</texture>
						<colordiffuse>OverlayColorNF</colordiffuse>
					</control>
				</itemlayout>

				<!-- <focusedlayout width="270" height="333"> -->
				<focusedlayout width="245" height="305">
					<!-- Image - Movies -->
					<include content="image-53">
						<param name="fallback">DefaultMovie.png</param>
						<param name="visible">Container.Content(movies)</param>
					</include>
					<!-- Image - TV -->
					<include content="image-53">
						<param name="fallback">DefaultTVShows.png</param>
						<param name="visible">!Container.Content(movies)</param>
					</include>
					<!-- Watched status -->
					<control type="image">
						<left>170</left>
						<top>286</top>
						<width>30</width>
						<height>42</height>
						<texture>$VAR[StatusOverlayWide]</texture>
					</control>
				</focusedlayout>
			</control>

			<control type="group">
				<!-- <centerleft>50%</centerleft> -->
				<left>0</left>
				<top>750</top>
				<width>920</width>
				<height>100</height>

				<!-- Title -->
				<control type="label">
					<left>90</left>
					<top>0</top>
					<width>740</width>
					<height>72</height>
					<font>Font72</font>
					<align>center</align>
					<textcolor>TextColor1</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(53)">Conditional</animation>
				</control>

				<!-- Details -->
				<control type="label">
					<left>90</left>
					<top>88</top>
					<width>740</width>
					<height>54</height>
					<font>Font27</font>
					<align>center</align>
					<aligny>top</aligny>
					<label>$VAR[Label2]</label>
					<textcolor>TextColor1</textcolor>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(53)">Conditional</animation>
				</control>

			</control>

		</control>

	</include>

	<include name="image-53">
		<param name="fallback">DefaultVideos.png</param>
		<param name="colordiffuse">TextColor1</param>
		<param name="visible">False</param>
		<definition>
			<control type="image">
				<left>34</left>
				<width>202</width>
				<height>300</height>
				<colordiffuse>$PARAM[colordiffuse]</colordiffuse>
				<texture fallback="$PARAM[fallback]" background="true">$VAR[mediaImages]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>$PARAM[visible]</visible>
				<visible>String.StartsWith(ListItem.Icon,Default)</visible>
			</control>

			<control type="image">
				<left>34</left>
				<width>202</width>
				<height>333</height>
				<texture border="1,1,1,36">views/DropShadowSmall.png</texture>
				<visible>$PARAM[visible]</visible>
				<visible>!String.StartsWith(ListItem.Icon,Default)</visible>
			</control>
			<control type="image">
				<left>34</left>
				<width>202</width>
				<height>300</height>
				<colordiffuse>$PARAM[colordiffuse]</colordiffuse>
				<texture fallback="$PARAM[fallback]" background="true">$VAR[mediaImages]</texture>
				<aspectratio align="center">scale</aspectratio>
				<visible>$PARAM[visible]</visible>
				<visible>!String.StartsWith(ListItem.Icon,Default)</visible>
			</control>
		</definition>
	</include>

</includes>
