<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype51"> <!-- list veiw -->

		<control type="group">
			<visible>Control.IsVisible(51)</visible>

			<include>Curve-VerticalNarrow</include>

			<!-- Media image - not episodes -->
			<control type="group">
				<visible>!Container.Content(episodes)</visible>

				<!-- Movies -->
				<include content="image-51">
					<param name="fallback">DefaultMovies.png</param>
					<param name="visible">Container.Content(movies)</param>
				</include>
				<!-- Albums -->
				<include content="image-51">
					<param name="fallback">DefaultAlbumCover.png</param>
					<param name="visible">Container.Content(albums)</param>
				</include>
				<!-- Others -->
				<include content="image-51">
					<param name="fallback">DefaultTVShows.png</param>
					<param name="visible">!Container.Content(movies) + !Container.Content(albums)</param>
				</include>
			</control>
			
            <control type="group">
					<!-- Episode image -->
					<control type="image">
						<left>920</left>
						<top>38</top>
						<width>950</width>
						<height>486</height>
						<fadetime>200</fadetime>
						<texture fallback="DefaultTVShows.png">$VAR[mediaImages]</texture>
						<aspectratio aligny="center">scale</aspectratio>
						<visible>Container.Content(episodes)</visible>
					</control>
			</control>
				
			<!-- Episode/media Info -->
			<control type="group">
				<left>40</left>
				<top>75</top>
				<visible>Container.Content(episodes)</visible>

				

				<!-- Season & Episode Info -->
				<control type="label">
					<left>0</left>
					<top>518</top>
					<width>452</width>
					<height>45</height>
					<font>Font42</font>
					<label>$INFO[ListItem.TVShowTitle]</label>
					<textcolor>TextColor1</textcolor>
				</control>
				<control type="label">
					<left>0</left>
					<top>582</top>
					<width>452</width>
					<height>45</height>
					<font>Font33</font>
					<textcolor>TextColor1</textcolor>
					<label>$INFO[ListItem.Title]</label>
				</control>
				<control type="label">
					<left>0</left>
					<top>636</top>
					<width>752</width>
					<height>45</height>
					<font>Font30</font>
					<textcolor>TextColor1</textcolor>
					<label>$INFO[ListItem.Season,$LOCALIZE[20373] , / ]$INFO[ListItem.Episode,$LOCALIZE[20359] ]</label>
				</control>
				<!-- Episode Plot -->
				<control type="textbox">
					<left>0</left>
					<top>696</top>
					<width>530</width>
					<height>190</height>
					<label>$VAR[Plot]</label>
					<textcolor>TextColor1</textcolor>
					<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
				</control>

			</control>

			<!-- List -->
			<control type="fixedlist" id="51">
				<left>650</left>
				<!-- <centertop>50%</centertop> -->
				<top>600</top>
				<width>1050</width>
				<height>420</height>
				<onup>51</onup>
				<ondown>51</ondown>
				<onleft>60</onleft>
				<onright condition="!Skin.HasSetting(KioskMode)">3001</onright>
				<pagecontrol>60</pagecontrol>
				<focusposition>3</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(albums)</visible>

				<itemlayout height="72" width="1050">
					<control type="label">
						<left>32</left>
						<top>0</top>
						<width>1018</width>
						<height>72</height>
						<font>Font36</font>
						<label>[LIGHT]$VAR[Label1][/LIGHT]</label>
						<textcolor>TextColor2</textcolor>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>0</left>
						<top>29</top>
						<width>14</width>
						<height>14</height>
						<texture>$VAR[StatusOverlay]</texture>
						<colordiffuse>OverlayColorNF</colordiffuse>
						<animation effect="fade" start="50" end="50" condition="true">Conditional</animation>
					</control>
				</itemlayout>

				<focusedlayout height="144" width="1050">
					<control type="label">
						<left>32</left>
						<top>25</top>
						<width>1018</width>
						<height>48</height>
						<font>Font48</font>
						<label>[B]$VAR[Label1][/B]</label>
						<textcolor>TextColor1</textcolor>
						<scroll>True</scroll>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(51)">Conditional</animation>
					</control>
					<control type="label">
						<left>32</left>
						<top>82</top>
						<width>1018</width>
						<height>27</height>
						<font>Font27</font>
						<label>$VAR[Label2]</label>
						<textcolor>TextColor1</textcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(51)">Conditional</animation>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>0</left>
						<top>43</top>
						<width>14</width>
						<height>14</height>
						<texture>$VAR[StatusOverlay]</texture>
						<colordiffuse>OverlayColorFO</colordiffuse>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(51)">Conditional</animation>
					</control>
				</focusedlayout>

			</control>

		</control>

	</include>

	<include name="image-51">
		<param name="fallback">DefaultVideo.png</param>
		<param name="visible">False</param>
		<definition>
			<control type="image">
				<left>120</left>
				<!-- <top>225</top> -->
				<top>600</top>
				<width>405</width>
				<!-- <height>600</height> -->
				<height>500</height>
				<fadetime>200</fadetime>
				<texture fallback="$PARAM[fallback]" background="true" colordiffuse="TextColor1">$VAR[mediaImages]</texture>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>$PARAM[visible]</visible>
				<visible>String.StartsWith(ListItem.Icon,Default)</visible>
			</control>

			<control type="image">
				<left>120</left>
				<!-- <top>225</top> -->
				<top>600</top>
				<width>405</width>
				<!-- <height>600</height> -->
				<height>500</height>
				<fadetime>200</fadetime>
				<texture fallback="$PARAM[fallback]" background="true">$VAR[mediaImages]</texture>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>$PARAM[visible]</visible>
				<bordertexture border="1,1,1,69">views/DropShadow.png</bordertexture>
				<bordersize>0,0,0,66</bordersize>
				<visible>!String.StartsWith(ListItem.Icon,Default)</visible>
			</control>
		</definition>
	</include>

</includes>
